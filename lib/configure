#!/bin/bash

set -e

declare argv
argv=$(getopt -o u:a: --long user:,account: -- "$@") || return
eval "set -- $argv"

while true; do
    case "$1" in
        --user | -u)
            shift
            user=$1
            shift
            ;;
        --account | -a)
            shift
            account=$1
            shift
            ;;
        --)
            shift
            break
            ;;
    esac
done

echo $user $account
exit

cat <<EOF > ~/.homeport
homeport_unix_user=$user
homeport_docker_account=$account
EOF
